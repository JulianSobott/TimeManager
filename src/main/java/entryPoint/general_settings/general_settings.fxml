<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import GuiElements.TabSettings?>
<?import themes.ThemePickerWidget?>
<TabSettings id="generalSettings" xmlns:fx="http://javafx.com/fxml/1" fx:id="tabSettings"
             fx:controller="entryPoint.general_settings.GeneralSettingsController">
    <VBox>
        <HBox spacing="40">
            <Label text="Theme: "/>
            <ThemePickerWidget/>
        </HBox>
        <HBox spacing="40">
            <Label text="Close Menu on select: "/>
            <CheckBox fx:id="cbCloseOnSelect"/>
        </HBox>
        <HBox spacing="40">
            <Label text="Resize content: "/>
            <CheckBox fx:id="cbResizeContent"/>
        </HBox>
    </VBox>
</TabSettings>
